{
  "name": "apility/netflex-sdk",
  "description": "The Netflex platform SDK",
  "type": "library",
  "license": "MIT",
  "keywords": [
    "sdk",
    "netflex",
    "framework"
  ],
  "homepage": "https://github.com/apility/netflex-sdk",
  "authors": [
    {
      "name": "Olav Ã˜yen",
      "email": "olav@apility.no",
      "homepage": "https://github.com/olavoyen",
      "role": "Author"
    },
    {
      "name": "Thomas Alrek",
      "email": "thomas@apility.no",
      "homepage": "https://github.com/thomas-alrek",
      "role": "Maintainer / Developer"
    },
    {
      "name": "Cathrine Vaage",
      "email": "cathrine@apility.no",
      "homepage": "https://github.com/cathrinevaage",
      "role": "Developer"
    },
    {
      "name": "Tommy Stigen Olsen",
      "email": "tommy@apility.no",
      "homepage": "https://github.com/tommysolsen",
      "role": "Developer"
    }
  ],
  "support": {
    "issues": "https://github.com/apility/netflex-sdk/issues",
    "source": "https://github.com/apility/netflex-sdk"
  },
  "autoload": {
    "psr-4": {
      "Netflex\\": "src/Netflex"
    },
    "files": [
      "src/NF.php"
    ]
  },
  "config": {
    "platform": {
      "php": "7.2"
    }
  },
  "require": {
    "guzzlehttp/guzzle": "^6.2",
    "nesbot/carbon": "^2.22",
    "phpfastcache/phpfastcache": "^7.0",
    "php-console/php-console": "^3.1",
    "ivopetkov/html5-dom-document-php": "^2.0",
    "apility/netflex-support": "^1.0",
    "psy/psysh": "^0.9.9",
    "apility/webpack-assets": "^1.0.2"
  },
  "require-dev": {
    "phpunit/phpunit": "^8.1",
    "spatie/phpunit-snapshot-assertions": "^2.1",
    "friendsofphp/php-cs-fixer": "^2.16",
    "brainmaestro/composer-git-hooks": "^2.8"
  },
  "scripts": {
    "cghooks": "vendor/bin/cghooks",
    "tests": "vendor/bin/phpunit --testdox --colors=always",
    "tests:update-snapshots": "vendor/bin/phpunit --colors=always -d --update-snapshots",
    "post-install-cmd": "cghooks add --ignore-lock",
    "post-update-cmd": "cghooks update"
  },
  "extra": {
    "hooks": {
      "pre-commit": [
        "echo committing as $(git config user.name)",
        "vendor/bin/php-cs-fixer fix src/ --rules=@PSR2"
      ],
      "pre-push": [
        "vendor/bin/php-cs-fixer fix --dry-run src/ --rules@PSR2",
        "composer run-script tests"
      ],
      "post-merge": "composer install"
    }
  }
}
